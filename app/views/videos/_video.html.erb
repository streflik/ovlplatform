<div class="box video">

  <%= share(video) unless @home %>

  <%= link_to image_tag(video.thumb.url(:normal), :alt=>video.name), video %>

  <ul>
    <li><%= link_to video.user.name, video.user %></li>
    <li><%= t("videos.meta.for") %> <%= link_to video.channel.name, video.channel %></li>
  </ul>

  <h2><%= link_to video.name, video %></h2>

  <%= meta(video) %>

  <p>
    <%= link_to t("buttons.watch"), video, :class=>"button learn" %>
    <% if video.is_paid %>
        <%= price(video) + " " + days(video) %>
    <% else %>
        <%= free %>
    <% end %>
  </p>

</div>
