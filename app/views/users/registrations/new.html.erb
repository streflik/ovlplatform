<% title "Sign up" %>

<div class="grid_8">

  <h1>Join OVL - It's fast and easy.</h1>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div class="inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, :required => true %>
        <%= f.input :accept_policy %>
      </div>

      <div class="actions">
        <%= f.button :submit, "Sign up" %>
      </div>

  <% end %>

  <p><%= link_to "Already on OVL? Sign in.", new_user_session_path %></p>

</div>

<div class="grid_4">
  <h3>Why is it worth?</h3>

  <ul class="benefits">
    <li>You can unlock desired videolessons.</li>
    <li>You can ask questions in comments.</li>
    <li>You can see emails of our teachers.</li>
  </ul>

</div>